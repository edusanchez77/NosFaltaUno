<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".HelpActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerSlide"
        android:layout_width="383dp"
        android:layout_height="714dp"
        android:layout_above="@id/indicator"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.rd.PageIndicatorView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_marginStart="332dp"
        android:layout_marginEnd="349dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerSlide"
        app:piv_animationType="thinWorm"
        app:piv_radius="5dp"
        app:piv_selectedColor="@color/colorAccent"
        app:piv_strokeWidth="5dp"
        app:piv_unselectedColor="@color/colorPrimaryDark"
        app:piv_viewPager="@id/viewPagerSlide" />

</androidx.constraintlayout.widget.ConstraintLayout>